{
	"name": "discord-api-types-website",
	"version": "1.0.0",
	"description": "Website for discord-api-types, hosted on https://discord-api-types.dev",
	"author": "Vlad Frangu <kingdgrizzle@gmail.com>",
	"license": "MIT",
	"private": true,
	"scripts": {
		"docusaurus": "docusaurus",
		"start": "npm run clean && docusaurus start",
		"build": "npm run clean && docusaurus build",
		"swizzle": "docusaurus swizzle",
		"deploy": "docusaurus deploy",
		"clear": "docusaurus clear",
		"serve": "docusaurus serve",
		"write-translations": "docusaurus write-translations",
		"write-heading-ids": "docusaurus write-heading-ids",
		"typecheck": "tsc",
		"lint": "eslint src --ext mjs,ts --fix",
		"lint:md": "markdownlint-cli2-fix",
		"lint:md-no-fix": "markdownlint-cli2",
		"clean": "node scripts/clean.mjs",
		"format": "prettier --write \"{src,static,scripts,docs}/**/*.{js,jsx,ts,tsx,css,json,md,mdx,yml}\"",
		"format:check": "prettier --check \"{src,static,scripts,docs}/**/*.{js,jsx,ts,tsx,css,json,md,mdx,yml}\"",
		"vercel-build": "npm run build"
	},
	"dependencies": {
		"@docusaurus/core": "2.0.0-beta.18",
		"@docusaurus/plugin-pwa": "2.0.0-beta.18",
		"@docusaurus/preset-classic": "2.0.0-beta.18",
		"@docusaurus/theme-search-algolia": "2.0.0-beta.18",
		"@heroicons/react": "^1.0.6",
		"@mdx-js/react": "^1.6.22",
		"@sapphire/docusaurus-plugin-npm2yarn2pnpm": "^1.0.3",
		"@sapphire/docusaurus-plugin-ts2esm2cjs": "^1.0.3",
		"@svgr/webpack": "^6.2.1",
		"@tippyjs/react": "^4.2.6",
		"clsx": "^1.1.1",
		"docusaurus-plugin-typedoc-api": "^1.10.0",
		"prism-react-renderer": "^1.3.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"swr": "^1.3.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.3",
		"@commitlint/config-conventional": "^16.2.1",
		"@docusaurus/module-type-aliases": "2.0.0-beta.18",
		"@sapphire/prettier-config": "^1.4.2",
		"@sapphire/ts-config": "^3.3.4",
		"@types/node": "^17.0.25",
		"@types/react": "^18.0.5",
		"@types/react-dom": "^18.0.1",
		"@typescript-eslint/eslint-plugin": "^5.20.0",
		"@typescript-eslint/parser": "^5.20.0",
		"cross-env": "^7.0.3",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.13.0",
		"lint-staged": "^12.3.8",
		"markdownlint": "^0.25.1",
		"markdownlint-cli2": "^0.4.0",
		"prettier": "^2.6.2",
		"pretty-quick": "^3.1.3",
		"replace-in-file": "^6.3.2",
		"rimraf": "^3.0.2",
		"typedoc": "^0.22.15",
		"typedoc-plugin-djs-links": "^1.0.4",
		"typedoc-plugin-markdown": "^3.12.0",
		"typedoc-plugin-mdn-links": "^1.0.6",
		"typescript": "^4.6.3"
	},
	"browserslist": {
		"production": [
			">0.5%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"homepage": "https://discord-api-types.dev",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,jsx,ts,tsx}": "eslint --fix --ext mjs,js,jsx,ts,tsx"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
