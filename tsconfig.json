{
	"compileOnSave": true,
	"compilerOptions": {
		"alwaysStrict": true,
		"lib": ["esnext"],
		"module": "commonjs",
		"noUnusedParameters": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"noUnusedLocals": true,
		"removeComments": false,
		"target": "ES2020",
		"importsNotUsedAsValues": "remove",
		"strictNullChecks": true,
		"preserveConstEnums": true
	},
	"include": [
		"globals.ts",
		"gateway/**/*.ts",
		"payloads/**/*.ts",
		"rest/**/*.ts",
		"rpc/**/*.ts",
		"shortcuts/**/*.ts",
		"voice/**/*.ts"
	]
}
